{
  "extends": "@clustar/typescript-config/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [{ "name": "react" }],
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
